@inject UserManager<ApplicationUser> UserManager

@{ 
    var user = await UserManager.GetUserAsync(User);
}

<script type="application/json" id="game-save-data">@Html.Raw(user.SaveData)</script>

<link rel="preload" href="~/images/game/map-full.png" as="image" />

<environment include="Development">
    <script src="~/js/game-script.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/game-script.min.js" asp-append-version="true"></script>
</environment>